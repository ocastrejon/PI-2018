extends ../default

block content

  include ../templates/nav

  div(class=['ui','container','grid','stackable'])
    div(class=['ten','wide','column'])
        h2(class=['ui','header','blue','dividing'])= 'Crear carro'
        div(class='form-nuevoproducto')
            form(class=['ui','form'] action='http://localhost:3000/crearproducto' method='post')
                div(class=['ui','field'])
                    label(for='nombre')= 'Nombre del Carro'
                    input(type= 'text' name='nombre' placeholder='Nombre')
                div(class=['ui', 'two', 'fields'])
                    div(class=['ui','field'])
                        label(for='nombre')= 'Precio'
                        input(type= 'text' name='precio' placeholder='Precio')
                    div(class=['ui','field'])
                        label(for='nombre')= 'Stock'
                        input(type= 'text' name='stock' placeholder='Stock')
                    //- div(class=['ui','field'])
                        label(for='nombre')= 'Fecha de Creación'
                        input(type= 'text' name='fechacreacion' placeholder='Fecha de Creación')
                button(class=['ui', 'button', 'basic', 'black'])= 'Almacenar Carro'
                div(class=['ui', 'message', 'error'])

        if info != undefined
            div(class=['ui', 'message', 'success'])
                i(class=['close', 'icon'])
                div(class='header')= 'Producto Registrado'
                p= info

  script(src='/javascripts/validacion.js')